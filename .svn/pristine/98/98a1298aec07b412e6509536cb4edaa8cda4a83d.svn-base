function validate(){
}

//添加角色点击事件
$( "#add-user" ).on('click', function(e) {
	e.preventDefault();
	
	var width = document.body.scrollWidth * 0.8;//屏幕的宽

	$( "#dialog-confirm" ).removeClass('hide').dialog({
		resizable: false,
		width: width,//弹窗的宽
		modal: true,
		title: "添加用户",
		title_html: true,
		buttons: [
			{
				html: "<i class='ace-icon fa fa-floppy-o bigger-120 blue'></i>&nbsp; 保存",
				"class" : "btn btn-white btn-info btn-bold",
				click: function() {
					//校验
					validate();
					return;
					$( this ).dialog( "close" );
				}
			}
			,
			{
				html: "<i class='ace-icon fa fa-times red2'></i>&nbsp; 取消",
				"class" : "btn btn-white btn-default btn-round",
				click: function() {
					$( this ).dialog( "close" );
				}
			}
			]
	});
});

