package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryWxyx;
import com.tuzhi.delivery.service.IDeliveryWxyxService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryWxyxController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryWxyx")
public class DeliveryWxyxController extends BaseController {

	@Autowired
	private IDeliveryWxyxService deliveryWxyxService;
	
	 /**
	 * @title:findDeliveryWxyxList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryWxyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryWxyxList(DeliveryWxyx deliveryWxyx){
		PageInfo<DeliveryWxyx> page = deliveryWxyxService.findDeliveryWxyxList(deliveryWxyx);
		return bootstrapTable(page);//PageInfo<DeliveryWxyx>
	}
	
	/**
	 * @title:getDeliveryWxyxById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryWxyx getDeliveryWxyxById(Integer id){
		DeliveryWxyx deliveryWxyx = deliveryWxyxService.getDeliveryWxyxById(id);
		return deliveryWxyx;
	}
	
	
	 /**
	 * @title:editDeliveryWxyx
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryWxyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryWxyx(DeliveryWxyx deliveryWxyx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryWxyxService.saveDeliveryWxyx(deliveryWxyx);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryWxyx
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryWxyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryWxyx(DeliveryWxyx deliveryWxyx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryWxyxService.editDeliveryWxyx(deliveryWxyx);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryWxyx
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryWxyx(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryWxyxService.delDeliveryWxyx(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
