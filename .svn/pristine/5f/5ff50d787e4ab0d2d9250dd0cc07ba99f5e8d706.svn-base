package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliverySzw;
import com.tuzhi.delivery.service.IDeliverySzwService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliverySzwController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliverySzw")
public class DeliverySzwController extends BaseController {

	@Autowired
	private IDeliverySzwService deliverySzwService;
	
	 /**
	 * @title:findDeliverySzwList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliverySzw
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliverySzwList(DeliverySzw deliverySzw){
		PageInfo<DeliverySzw> page = deliverySzwService.findDeliverySzwList(deliverySzw);
		return bootstrapTable(page);//PageInfo<DeliverySzw>
	}
	
	/**
	 * @title:getDeliverySzwById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliverySzw getDeliverySzwById(Integer id){
		DeliverySzw deliverySzw = deliverySzwService.getDeliverySzwById(id);
		return deliverySzw;
	}
	
	
	 /**
	 * @title:editDeliverySzw
	 * @description: 新增
	 * @author 郑德超
	 * @param deliverySzw
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliverySzw(DeliverySzw deliverySzw){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzwService.saveDeliverySzw(deliverySzw);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliverySzw
	 * @description: 修改
	 * @author 郑德超
	 * @param deliverySzw
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliverySzw(DeliverySzw deliverySzw){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzwService.editDeliverySzw(deliverySzw);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliverySzw
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliverySzw(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzwService.delDeliverySzw(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
