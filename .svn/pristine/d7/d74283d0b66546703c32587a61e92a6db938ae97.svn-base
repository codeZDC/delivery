package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryDlxx;
import com.tuzhi.delivery.service.IDeliveryDlxxService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryDlxxController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryDlxx")
public class DeliveryDlxxController extends BaseController {

	@Autowired
	private IDeliveryDlxxService deliveryDlxxService;
	
	 /**
	 * @title:findDeliveryDlxxList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryDlxx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryDlxxList(DeliveryDlxx deliveryDlxx){
		PageInfo<DeliveryDlxx> page = deliveryDlxxService.findDeliveryDlxxList(deliveryDlxx);
		return bootstrapTable(page);//PageInfo<DeliveryDlxx>
	}
	
	/**
	 * @title:getDeliveryDlxxById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryDlxx getDeliveryDlxxById(Integer id){
		DeliveryDlxx deliveryDlxx = deliveryDlxxService.getDeliveryDlxxById(id);
		return deliveryDlxx;
	}
	
	
	 /**
	 * @title:editDeliveryDlxx
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryDlxx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryDlxx(DeliveryDlxx deliveryDlxx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryDlxxService.saveDeliveryDlxx(deliveryDlxx);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryDlxx
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryDlxx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryDlxx(DeliveryDlxx deliveryDlxx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryDlxxService.editDeliveryDlxx(deliveryDlxx);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryDlxx
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryDlxx(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryDlxxService.delDeliveryDlxx(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
