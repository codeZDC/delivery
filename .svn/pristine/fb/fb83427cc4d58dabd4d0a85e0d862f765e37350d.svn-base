<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuzhi.delivery.mapper.IUuMapper">
  <resultMap id="UuResultMap" type="com.tuzhi.delivery.domain.Uu">
        <id column="id" property="id" />
    <result column="name" property="name" />
    <result column="remarks" property="remarks" />

  </resultMap>
  <sql id="column_Where">
  	<trim prefix="WHERE" prefixOverrides="AND|OR">
    	    	<if test="id != null">and id=#{id}</if>
    	<if test="name != null and name != '' ">and name=#{name}</if>
    	<if test="remarks != null and remarks != '' ">and remarks=#{remarks}</if>

    </trim>
  </sql>
  <sql id="column_List">
    id,name,remarks
  </sql>
  
  <!--
  	功能：分页查询
  -->
  <select id="findUuList" parameterType="com.tuzhi.delivery.domain.Uu" resultMap="UuResultMap">
    select	<include refid="column_List" />
    from uu
    <include refid="column_Where" />
    <if test="sortOrder !=null and sortOrder !='' and sortName != null and sortName != ''">
    	order by 
    	    	<if test="'id' == sortName">  id ${sortOrder } </if>
    	<if test="'name' == sortName">  name ${sortOrder } </if>
    	<if test="'remarks' == sortName">  remarks ${sortOrder } </if>

    </if>
    
  </select>
  
</mapper>
