package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliveryHsyxMapper;
import com.tuzhi.delivery.domain.DeliveryHsyx;
import com.tuzhi.delivery.service.IDeliveryHsyxService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliveryHsyxServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliveryHsyxServiceImpl extends BaseServiceImpl<DeliveryHsyx> implements IDeliveryHsyxService {
	
	@Autowired
	private IDeliveryHsyxMapper deliveryHsyxMapper;
 
	public PageInfo<DeliveryHsyx> findDeliveryHsyxList(DeliveryHsyx deliveryHsyx) {
		// TODO 分页查询
		PageHelper.startPage(deliveryHsyx.getPageNum(), deliveryHsyx.getPageSize());
		PageInfo<DeliveryHsyx> pageInfo = new PageInfo<DeliveryHsyx>(deliveryHsyxMapper.findDeliveryHsyxList(deliveryHsyx));
		
		return pageInfo;
	}
	
	public DeliveryHsyx getDeliveryHsyxById(Integer id){
		// TODO 根据ID查询
		return deliveryHsyxMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliveryHsyx(DeliveryHsyx deliveryHsyx){
		// TODO 新增
		return deliveryHsyxMapper.insertSelective(deliveryHsyx) > 0;
	}
	
	public boolean editDeliveryHsyx(DeliveryHsyx deliveryHsyx){
		// TODO 修改
		return deliveryHsyxMapper.updateByPrimaryKeySelective(deliveryHsyx) > 0;
	}
	
	public boolean delDeliveryHsyx(List<Integer> deliveryHsyxArr){
		// TODO	删除
		Example example = new Example(DeliveryHsyx.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliveryHsyxArr);
		return deliveryHsyxMapper.deleteByExample(example) > 0;
	}

}
