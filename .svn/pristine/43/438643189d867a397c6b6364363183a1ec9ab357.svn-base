package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliveryMndtMapper;
import com.tuzhi.delivery.domain.DeliveryMndt;
import com.tuzhi.delivery.service.IDeliveryMndtService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliveryMndtServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliveryMndtServiceImpl extends BaseServiceImpl<DeliveryMndt> implements IDeliveryMndtService {
	
	@Autowired
	private IDeliveryMndtMapper deliveryMndtMapper;
 
	public PageInfo<DeliveryMndt> findDeliveryMndtList(DeliveryMndt deliveryMndt) {
		// TODO 分页查询
		PageHelper.startPage(deliveryMndt.getPageNum(), deliveryMndt.getPageSize());
		PageInfo<DeliveryMndt> pageInfo = new PageInfo<DeliveryMndt>(deliveryMndtMapper.findDeliveryMndtList(deliveryMndt));
		
		return pageInfo;
	}
	
	public DeliveryMndt getDeliveryMndtById(Integer id){
		// TODO 根据ID查询
		return deliveryMndtMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliveryMndt(DeliveryMndt deliveryMndt){
		// TODO 新增
		return deliveryMndtMapper.insertSelective(deliveryMndt) > 0;
	}
	
	public boolean editDeliveryMndt(DeliveryMndt deliveryMndt){
		// TODO 修改
		return deliveryMndtMapper.updateByPrimaryKeySelective(deliveryMndt) > 0;
	}
	
	public boolean delDeliveryMndt(List<Integer> deliveryMndtArr){
		// TODO	删除
		Example example = new Example(DeliveryMndt.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliveryMndtArr);
		return deliveryMndtMapper.deleteByExample(example) > 0;
	}

}
