var path = $("#contextPath").val();
$(document).ready(function() {
	
	//初始化Table
    var oTable = new TableInit();
    oTable.Init();
    
    //初始化页面上面的按钮事件
	$("#btn_add").click(function(){
		//新增
		$('#user_add_form')[0].reset();
		$("#saveModal").modal({backdrop: 'static', keyboard: false});
	});
	$("#btn_edit").click(function(){
		//编辑
		var rowData = $("#table_user").bootstrapTable("getSelections");
		if(rowData.length < 1){
			$.alert("请勾选要编辑的对象");
			return;
		}
		var data = rowData[rowData.length-1];
		$("#user_edit_form").find(".form-control").each(function(){
			$(this).val(data[$(this).attr("name")]);
		});
		$("#editModal").modal({backdrop: 'static', keyboard: false});
	});
	$("#btn_info").click(function(){
		//详情
		var rowData = $("#table_user").bootstrapTable("getSelections");
		if(rowData.length < 1){
			$.alert("请勾选要查看的对象");
			return;
		}
		var data = rowData[rowData.length-1];
		$("#user_info_Form").find("p").each(function(){
			$(this).text(data[$(this).attr("name")]);
		});
		$("#infoModal").modal({backdrop: 'static', keyboard: false});
	});
	$("#btn_delete").click(function(){
		var rowData = $("#table_user").bootstrapTable("getSelections");
		if(rowData.length < 1){
			$.alert("请勾选要删除的对象");
			return;
		}
		$.confirm({
			icon: 'fa fa-bolt',
		    title: '提示',
		    content:'您确定要删除吗？',
		    buttons: {
		        cancel: {
		            text: '取消',
		            btnClass: 'btn-cancel',
		            action: function () {
		            	//$.alert("取消"); 
		            }
		        },
		        success: {
		            text: '确定',
		            btnClass: 'btn-primary',
		            action: function () {
		           		var ids= [];
		        		for(var i in rowData){
		        			ids.push(rowData[i].id);
		        		}
		            	btu_del_db(ids);
		            }
		        }
		    }
		});
	});
});


var TableInit = function () {
    var oTableInit = new Object();
    //初始化Table
    oTableInit.Init = function () {
        $('#table_user').bootstrapTable({
            url: path+'/user/list.html',         //请求后台的URL（*）
            method: 'post',                      //请求方式（*）
            toolbar: '#toolbar',                //工具按钮用哪个容器
            striped: true,                      //是否显示行间隔色
            cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
            pagination: true,                   //是否显示分页（*）
            sortable: true,                     //是否启用排序
            sortName:"id",
            sortOrder: "desc",                   //排序方式
            queryParams: oTableInit.queryParams,//传递参数（*）
            queryParamsType: 'limit',
            sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
            pageNumber:1,                       //初始化加载第一页，默认第一页
            pageSize: 15,                       //每页的记录行数（*）
            pageList: [10, 15, 20, 50],        //可供选择的每页的行数（*）
            search: true,                       //是否显示表格搜索
            strictSearch: true,
            showColumns: true,                  //是否显示所有的列
            showRefresh: true,                  //是否显示刷新按钮
            minimumCountColumns: 2,             //最少允许的列数
            clickToSelect: true,                //是否启用点击选中行
            //height: 500,                        //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
            uniqueId: "id",                     //每一行的唯一标识，一般为主键列
            showToggle:true,                    //是否显示详细视图和列表视图的切换按钮
            cardView: false,                    //是否显示详细视图
            detailView: false,                   //是否显示父子表
            contentType: "application/x-www-form-urlencoded", //解决POST提交问题
            columns: [		    {checkbox: true },
		    {title:'用户名',field: 'username',sortable:true },
		    {title:'密码',field: 'password',sortable:true },
		    {title:'单位名称',field: 'unitName',sortable:true },
		    {title:'联系人',field: 'concat',sortable:true },
		    {title:'联系电话',field: 'telephone',sortable:true },
		    {title:'手机',field: 'phoneNumber',sortable:true },
		    {title:'邮编',field: 'zipCode',sortable:true },
		    {title:'传真',field: 'fax',sortable:true },
		    {title:'单位性质,1国有企业 2民营企业 3事业单位...',field: 'unitProperty',sortable:true },
		    {title:'行政区域,默认审核人根据行政区域来确定',field: 'admZone',sortable:true },
		    {title:'汇交区域,用于确定审核人',field: 'deliveryZone',sortable:true },
		    {title:'办公地址',field: 'workAddr',sortable:true },
		    {title:'单位地址',field: 'unitAddr',sortable:true },
		    {title:'组织机构代码',field: 'orgCode',sortable:true },
		    {title:'单位描述',field: 'unitdesc',sortable:true },
		    {title:'业务范围',field: 'sphereOfBus',sortable:true },
		    {title:'资质：1-2-3-4 甲-乙-丙-丁',field: 'qualification',sortable:true },
		    {title:'证书编号',field: 'certificateCode',sortable:true },
		    {title:'法人',field: 'legalPerson',sortable:true },
		    {title:'发证时间',field: 'certificateTime',sortable:true },
		    {title:'有效期',field: 'valiableTime',sortable:true },
		    {title:'用户类型，0-普通用户 1-审核用户',field: 'userType',sortable:true },
		    {title:'角色id',field: 'roleId',sortable:true },
		    {title:'创建时间',field: 'createdTime',sortable:true },
		    {title:'备用字段1',field: 'reserve1',sortable:true },
		    {title:'备用字段2',field: 'reserve2',sortable:true }
],
		    onLoadError : function (status){
		    	if(Number(status) == 503){
		    		window.location.href = path + "/sys/sysuser/noAuthorized";
		    	}
		    }
        });
    };

    //得到查询的参数
    oTableInit.queryParams = function (params) {
        var temp = {   //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
        	pageSize: params.limit,   //页面大小
    		pageNum: params.pageNumber,  //页码
    		sortName: params.sort,
    		sortOrder:params.order,
    		searchText:params.search
        };
        return temp;
    };
    return oTableInit;
};
/**
 * 新增到数据库
 */
function btu_add_db(){
	$.ajax({
		dataType : "json",
		url : path +"/user/save.html",  
		type : "post", 
		data : $("#user_add_form").serialize(), 
		async : false,  
		success : function(data) {
			if(data.success){
				$.alert(data.message);
				$('#table_user').bootstrapTable('refresh');
				$("#saveModal").modal("hide");
			}else{
				$.alert(data.message);
			}
		},
		error : function(data){
			if(data.status == 503){
				$.alert("对不起，您没有该项操作的权限，请联系管理员。");
			}
		}
	});
}
