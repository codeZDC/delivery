/**
 * 删除到数据库
 */
function btu_del_db(ids){
	$.ajax({
		dataType : "json",
		url : path +"/user/del.html",  
		type : "post", 
		data : {ids:ids}, 
		async : false,
		success : function(data) {
			if(data.success){
				$.alert(data.message);
				$('#table_user').bootstrapTable('refresh');
			}else{
				alert(data.message);
			}
		},
		error : function(data){
			if(data.status == 503){
				$.alert("对不起，您没有该项操作的权限，请联系管理员。");
			}
		}
	});
}
