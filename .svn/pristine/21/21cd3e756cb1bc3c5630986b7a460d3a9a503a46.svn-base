package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryGps;
import com.tuzhi.delivery.service.IDeliveryGpsService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryGpsController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryGps")
public class DeliveryGpsController extends BaseController {

	@Autowired
	private IDeliveryGpsService deliveryGpsService;
	
	 /**
	 * @title:findDeliveryGpsList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryGps
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryGpsList(DeliveryGps deliveryGps){
		PageInfo<DeliveryGps> page = deliveryGpsService.findDeliveryGpsList(deliveryGps);
		return bootstrapTable(page);//PageInfo<DeliveryGps>
	}
	
	/**
	 * @title:getDeliveryGpsById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryGps getDeliveryGpsById(Integer id){
		DeliveryGps deliveryGps = deliveryGpsService.getDeliveryGpsById(id);
		return deliveryGps;
	}
	
	
	 /**
	 * @title:editDeliveryGps
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryGps
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryGps(DeliveryGps deliveryGps){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGpsService.saveDeliveryGps(deliveryGps);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryGps
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryGps
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryGps(DeliveryGps deliveryGps){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGpsService.editDeliveryGps(deliveryGps);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryGps
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryGps(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGpsService.delDeliveryGps(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
