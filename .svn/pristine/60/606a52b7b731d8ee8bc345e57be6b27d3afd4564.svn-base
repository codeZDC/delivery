package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryGccl;
import com.tuzhi.delivery.service.IDeliveryGcclService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryGcclController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryGccl")
public class DeliveryGcclController extends BaseController {

	@Autowired
	private IDeliveryGcclService deliveryGcclService;
	
	 /**
	 * @title:findDeliveryGcclList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryGccl
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryGcclList(DeliveryGccl deliveryGccl){
		PageInfo<DeliveryGccl> page = deliveryGcclService.findDeliveryGcclList(deliveryGccl);
		return bootstrapTable(page);//PageInfo<DeliveryGccl>
	}
	
	/**
	 * @title:getDeliveryGcclById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryGccl getDeliveryGcclById(Integer id){
		DeliveryGccl deliveryGccl = deliveryGcclService.getDeliveryGcclById(id);
		return deliveryGccl;
	}
	
	
	 /**
	 * @title:editDeliveryGccl
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryGccl
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryGccl(DeliveryGccl deliveryGccl){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGcclService.saveDeliveryGccl(deliveryGccl);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryGccl
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryGccl
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryGccl(DeliveryGccl deliveryGccl){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGcclService.editDeliveryGccl(deliveryGccl);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryGccl
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryGccl(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryGcclService.delDeliveryGccl(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
