		<!-- 查看12种模板-->
		<%@include file="WEB-INF/views/12templatesView/popView.jsp"%>
		<!-- 用于弹出全屏的控件-->


		<script type="text/javascript">
				try{ace.settings.check('main-container' , 'fixed')}catch(e){}
			</script>

		<!-- 左边的菜单栏 -->
		<!-- #section:basics/sidebar -->
		<%@include file="WEB-INF/common/sidebar.jsp"%>
