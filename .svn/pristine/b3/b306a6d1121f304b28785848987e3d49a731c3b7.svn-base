package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryPtdt;
import com.tuzhi.delivery.service.IDeliveryPtdtService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryPtdtController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryPtdt")
public class DeliveryPtdtController extends BaseController {

	@Autowired
	private IDeliveryPtdtService deliveryPtdtService;
	
	 /**
	 * @title:findDeliveryPtdtList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryPtdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryPtdtList(DeliveryPtdt deliveryPtdt){
		PageInfo<DeliveryPtdt> page = deliveryPtdtService.findDeliveryPtdtList(deliveryPtdt);
		return bootstrapTable(page);//PageInfo<DeliveryPtdt>
	}
	
	/**
	 * @title:getDeliveryPtdtById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryPtdt getDeliveryPtdtById(Integer id){
		DeliveryPtdt deliveryPtdt = deliveryPtdtService.getDeliveryPtdtById(id);
		return deliveryPtdt;
	}
	
	
	 /**
	 * @title:editDeliveryPtdt
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryPtdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryPtdt(DeliveryPtdt deliveryPtdt){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryPtdtService.saveDeliveryPtdt(deliveryPtdt);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryPtdt
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryPtdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryPtdt(DeliveryPtdt deliveryPtdt){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryPtdtService.editDeliveryPtdt(deliveryPtdt);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryPtdt
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryPtdt(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryPtdtService.delDeliveryPtdt(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
