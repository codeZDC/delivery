package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryZytz;
import com.tuzhi.delivery.service.IDeliveryZytzService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryZytzController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryZytz")
public class DeliveryZytzController extends BaseController {

	@Autowired
	private IDeliveryZytzService deliveryZytzService;
	
	 /**
	 * @title:findDeliveryZytzList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryZytz
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryZytzList(DeliveryZytz deliveryZytz){
		PageInfo<DeliveryZytz> page = deliveryZytzService.findDeliveryZytzList(deliveryZytz);
		return bootstrapTable(page);//PageInfo<DeliveryZytz>
	}
	
	/**
	 * @title:getDeliveryZytzById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryZytz getDeliveryZytzById(Integer id){
		DeliveryZytz deliveryZytz = deliveryZytzService.getDeliveryZytzById(id);
		return deliveryZytz;
	}
	
	
	 /**
	 * @title:editDeliveryZytz
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryZytz
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryZytz(DeliveryZytz deliveryZytz){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZytzService.saveDeliveryZytz(deliveryZytz);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryZytz
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryZytz
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryZytz(DeliveryZytz deliveryZytz){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZytzService.editDeliveryZytz(deliveryZytz);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryZytz
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryZytz(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZytzService.delDeliveryZytz(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
