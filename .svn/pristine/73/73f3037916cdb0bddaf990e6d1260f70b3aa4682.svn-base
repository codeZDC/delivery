package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliveryWxyxMapper;
import com.tuzhi.delivery.domain.DeliveryWxyx;
import com.tuzhi.delivery.service.IDeliveryWxyxService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliveryWxyxServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliveryWxyxServiceImpl extends BaseServiceImpl<DeliveryWxyx> implements IDeliveryWxyxService {
	
	@Autowired
	private IDeliveryWxyxMapper deliveryWxyxMapper;
 
	public PageInfo<DeliveryWxyx> findDeliveryWxyxList(DeliveryWxyx deliveryWxyx) {
		// TODO 分页查询
		PageHelper.startPage(deliveryWxyx.getPageNum(), deliveryWxyx.getPageSize());
		PageInfo<DeliveryWxyx> pageInfo = new PageInfo<DeliveryWxyx>(deliveryWxyxMapper.findDeliveryWxyxList(deliveryWxyx));
		
		return pageInfo;
	}
	
	public DeliveryWxyx getDeliveryWxyxById(Integer id){
		// TODO 根据ID查询
		return deliveryWxyxMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliveryWxyx(DeliveryWxyx deliveryWxyx){
		// TODO 新增
		return deliveryWxyxMapper.insertSelective(deliveryWxyx) > 0;
	}
	
	public boolean editDeliveryWxyx(DeliveryWxyx deliveryWxyx){
		// TODO 修改
		return deliveryWxyxMapper.updateByPrimaryKeySelective(deliveryWxyx) > 0;
	}
	
	public boolean delDeliveryWxyx(List<Integer> deliveryWxyxArr){
		// TODO	删除
		Example example = new Example(DeliveryWxyx.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliveryWxyxArr);
		return deliveryWxyxMapper.deleteByExample(example) > 0;
	}

}
