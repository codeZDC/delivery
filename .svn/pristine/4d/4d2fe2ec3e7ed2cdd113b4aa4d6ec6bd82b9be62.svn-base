package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliverySzdt;
import com.tuzhi.delivery.service.IDeliverySzdtService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliverySzdtController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliverySzdt")
public class DeliverySzdtController extends BaseController {

	@Autowired
	private IDeliverySzdtService deliverySzdtService;
	
	 /**
	 * @title:findDeliverySzdtList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliverySzdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliverySzdtList(DeliverySzdt deliverySzdt){
		PageInfo<DeliverySzdt> page = deliverySzdtService.findDeliverySzdtList(deliverySzdt);
		return bootstrapTable(page);//PageInfo<DeliverySzdt>
	}
	
	/**
	 * @title:getDeliverySzdtById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliverySzdt getDeliverySzdtById(Integer id){
		DeliverySzdt deliverySzdt = deliverySzdtService.getDeliverySzdtById(id);
		return deliverySzdt;
	}
	
	
	 /**
	 * @title:editDeliverySzdt
	 * @description: 新增
	 * @author 郑德超
	 * @param deliverySzdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliverySzdt(DeliverySzdt deliverySzdt){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzdtService.saveDeliverySzdt(deliverySzdt);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliverySzdt
	 * @description: 修改
	 * @author 郑德超
	 * @param deliverySzdt
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliverySzdt(DeliverySzdt deliverySzdt){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzdtService.editDeliverySzdt(deliverySzdt);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliverySzdt
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliverySzdt(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliverySzdtService.delDeliverySzdt(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
