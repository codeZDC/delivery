package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliverySzwMapper;
import com.tuzhi.delivery.domain.DeliverySzw;
import com.tuzhi.delivery.service.IDeliverySzwService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliverySzwServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliverySzwServiceImpl extends BaseServiceImpl<DeliverySzw> implements IDeliverySzwService {
	
	@Autowired
	private IDeliverySzwMapper deliverySzwMapper;
 
	public PageInfo<DeliverySzw> findDeliverySzwList(DeliverySzw deliverySzw) {
		// TODO 分页查询
		PageHelper.startPage(deliverySzw.getPageNum(), deliverySzw.getPageSize());
		PageInfo<DeliverySzw> pageInfo = new PageInfo<DeliverySzw>(deliverySzwMapper.findDeliverySzwList(deliverySzw));
		
		return pageInfo;
	}
	
	public DeliverySzw getDeliverySzwById(Integer id){
		// TODO 根据ID查询
		return deliverySzwMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliverySzw(DeliverySzw deliverySzw){
		// TODO 新增
		return deliverySzwMapper.insertSelective(deliverySzw) > 0;
	}
	
	public boolean editDeliverySzw(DeliverySzw deliverySzw){
		// TODO 修改
		return deliverySzwMapper.updateByPrimaryKeySelective(deliverySzw) > 0;
	}
	
	public boolean delDeliverySzw(List<Integer> deliverySzwArr){
		// TODO	删除
		Example example = new Example(DeliverySzw.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliverySzwArr);
		return deliverySzwMapper.deleteByExample(example) > 0;
	}

}
