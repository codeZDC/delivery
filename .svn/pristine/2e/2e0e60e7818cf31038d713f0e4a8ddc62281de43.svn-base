package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliveryGpsMapper;
import com.tuzhi.delivery.domain.DeliveryGps;
import com.tuzhi.delivery.service.IDeliveryGpsService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliveryGpsServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliveryGpsServiceImpl extends BaseServiceImpl<DeliveryGps> implements IDeliveryGpsService {
	
	@Autowired
	private IDeliveryGpsMapper deliveryGpsMapper;
 
	public PageInfo<DeliveryGps> findDeliveryGpsList(DeliveryGps deliveryGps) {
		// TODO 分页查询
		PageHelper.startPage(deliveryGps.getPageNum(), deliveryGps.getPageSize());
		PageInfo<DeliveryGps> pageInfo = new PageInfo<DeliveryGps>(deliveryGpsMapper.findDeliveryGpsList(deliveryGps));
		
		return pageInfo;
	}
	
	public DeliveryGps getDeliveryGpsById(Integer id){
		// TODO 根据ID查询
		return deliveryGpsMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliveryGps(DeliveryGps deliveryGps){
		// TODO 新增
		return deliveryGpsMapper.insertSelective(deliveryGps) > 0;
	}
	
	public boolean editDeliveryGps(DeliveryGps deliveryGps){
		// TODO 修改
		return deliveryGpsMapper.updateByPrimaryKeySelective(deliveryGps) > 0;
	}
	
	public boolean delDeliveryGps(List<Integer> deliveryGpsArr){
		// TODO	删除
		Example example = new Example(DeliveryGps.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliveryGpsArr);
		return deliveryGpsMapper.deleteByExample(example) > 0;
	}

}
