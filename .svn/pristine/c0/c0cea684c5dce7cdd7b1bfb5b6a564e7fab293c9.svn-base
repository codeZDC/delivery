package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryZych;
import com.tuzhi.delivery.service.IDeliveryZychService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryZychController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryZych")
public class DeliveryZychController extends BaseController {

	@Autowired
	private IDeliveryZychService deliveryZychService;
	
	 /**
	 * @title:findDeliveryZychList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryZych
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryZychList(DeliveryZych deliveryZych){
		PageInfo<DeliveryZych> page = deliveryZychService.findDeliveryZychList(deliveryZych);
		return bootstrapTable(page);//PageInfo<DeliveryZych>
	}
	
	/**
	 * @title:getDeliveryZychById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryZych getDeliveryZychById(Integer id){
		DeliveryZych deliveryZych = deliveryZychService.getDeliveryZychById(id);
		return deliveryZych;
	}
	
	
	 /**
	 * @title:editDeliveryZych
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryZych
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryZych(DeliveryZych deliveryZych){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZychService.saveDeliveryZych(deliveryZych);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryZych
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryZych
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryZych(DeliveryZych deliveryZych){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZychService.editDeliveryZych(deliveryZych);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryZych
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryZych(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryZychService.delDeliveryZych(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
