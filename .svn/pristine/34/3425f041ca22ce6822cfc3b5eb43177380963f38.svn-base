package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryYqjy;
import com.tuzhi.delivery.service.IDeliveryYqjyService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryYqjyController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryYqjy")
public class DeliveryYqjyController extends BaseController {

	@Autowired
	private IDeliveryYqjyService deliveryYqjyService;
	
	 /**
	 * @title:findDeliveryYqjyList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryYqjy
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryYqjyList(DeliveryYqjy deliveryYqjy){
		PageInfo<DeliveryYqjy> page = deliveryYqjyService.findDeliveryYqjyList(deliveryYqjy);
		return bootstrapTable(page);//PageInfo<DeliveryYqjy>
	}
	
	/**
	 * @title:getDeliveryYqjyById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryYqjy getDeliveryYqjyById(Integer id){
		DeliveryYqjy deliveryYqjy = deliveryYqjyService.getDeliveryYqjyById(id);
		return deliveryYqjy;
	}
	
	
	 /**
	 * @title:editDeliveryYqjy
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryYqjy
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryYqjy(DeliveryYqjy deliveryYqjy){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryYqjyService.saveDeliveryYqjy(deliveryYqjy);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryYqjy
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryYqjy
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryYqjy(DeliveryYqjy deliveryYqjy){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryYqjyService.editDeliveryYqjy(deliveryYqjy);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryYqjy
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryYqjy(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryYqjyService.delDeliveryYqjy(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
