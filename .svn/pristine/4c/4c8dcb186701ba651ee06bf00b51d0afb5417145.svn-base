package com.tuzhi.delivery.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseController;
import com.tuzhi.delivery.domain.DeliveryHsyx;
import com.tuzhi.delivery.service.IDeliveryHsyxService;
import com.tuzhi.delivery.util.BootstrapTable;

/**
 * @ClassName:DeliveryHsyxController
 * @Description:的控制器
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Controller
@RequestMapping("/deliveryHsyx")
public class DeliveryHsyxController extends BaseController {

	@Autowired
	private IDeliveryHsyxService deliveryHsyxService;
	
	 /**
	 * @title:findDeliveryHsyxList
	 * @description: 分页
	 * @author 郑德超
	 * @param deliveryHsyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/list")
	@ResponseBody
	public BootstrapTable findDeliveryHsyxList(DeliveryHsyx deliveryHsyx){
		PageInfo<DeliveryHsyx> page = deliveryHsyxService.findDeliveryHsyxList(deliveryHsyx);
		return bootstrapTable(page);//PageInfo<DeliveryHsyx>
	}
	
	/**
	 * @title:getDeliveryHsyxById
	 * @description: 查询一条信息
	 * @author 郑德超
	 * @param id
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("/get")
	@ResponseBody
	public DeliveryHsyx getDeliveryHsyxById(Integer id){
		DeliveryHsyx deliveryHsyx = deliveryHsyxService.getDeliveryHsyxById(id);
		return deliveryHsyx;
	}
	
	
	 /**
	 * @title:editDeliveryHsyx
	 * @description: 新增
	 * @author 郑德超
	 * @param deliveryHsyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("save")
	@ResponseBody
	public Map<String, Object> saveDeliveryHsyx(DeliveryHsyx deliveryHsyx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryHsyxService.saveDeliveryHsyx(deliveryHsyx);
		map.put("success", flag);
		map.put("message", "新增"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:editDeliveryHsyx
	 * @description: 修改
	 * @author 郑德超
	 * @param deliveryHsyx
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("edit")
	@ResponseBody
	public Map<String, Object> editDeliveryHsyx(DeliveryHsyx deliveryHsyx){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryHsyxService.editDeliveryHsyx(deliveryHsyx);
		map.put("success", flag);
		map.put("message", "修改"+(flag?"成功":"失败"));
		return map;
	}
	
	
	 /**
	 * @title:delDeliveryHsyx
	 * @description: 删除
	 * @author 郑德超
	 * @param ids	主键ID集合
	 * @CreateDate  2018-03-26 17:43:23
	 */
	@RequestMapping("del")
	@ResponseBody
	public Map<String, Object> delDeliveryHsyx(@RequestParam(value = "ids[]",required = false,defaultValue = "") List<Integer> ids){
		Map<String, Object> map = new HashMap<String, Object>();
		boolean flag = deliveryHsyxService.delDeliveryHsyx(ids);
		map.put("success", flag);
		map.put("message", "删除"+(flag?"成功":"失败"));
		return map;
	}
}
