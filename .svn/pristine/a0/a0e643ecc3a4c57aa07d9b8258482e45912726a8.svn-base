package com.tuzhi.delivery.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tuzhi.delivery.base.BaseServiceImpl;
import com.tuzhi.delivery.mapper.IDeliveryZytzMapper;
import com.tuzhi.delivery.domain.DeliveryZytz;
import com.tuzhi.delivery.service.IDeliveryZytzService;

import tk.mybatis.mapper.entity.Example;
import tk.mybatis.mapper.entity.Example.Criteria;

/**
 * @ClassName:DeliveryZytzServiceImpl
 * @Description:业务层接口实现类
 * @author 郑德超
 * @CreateDate 2018-03-26 17:43:23
 */
@Service
public class DeliveryZytzServiceImpl extends BaseServiceImpl<DeliveryZytz> implements IDeliveryZytzService {
	
	@Autowired
	private IDeliveryZytzMapper deliveryZytzMapper;
 
	public PageInfo<DeliveryZytz> findDeliveryZytzList(DeliveryZytz deliveryZytz) {
		// TODO 分页查询
		PageHelper.startPage(deliveryZytz.getPageNum(), deliveryZytz.getPageSize());
		PageInfo<DeliveryZytz> pageInfo = new PageInfo<DeliveryZytz>(deliveryZytzMapper.findDeliveryZytzList(deliveryZytz));
		
		return pageInfo;
	}
	
	public DeliveryZytz getDeliveryZytzById(Integer id){
		// TODO 根据ID查询
		return deliveryZytzMapper.selectByPrimaryKey(id);
	}
	
	public boolean saveDeliveryZytz(DeliveryZytz deliveryZytz){
		// TODO 新增
		return deliveryZytzMapper.insertSelective(deliveryZytz) > 0;
	}
	
	public boolean editDeliveryZytz(DeliveryZytz deliveryZytz){
		// TODO 修改
		return deliveryZytzMapper.updateByPrimaryKeySelective(deliveryZytz) > 0;
	}
	
	public boolean delDeliveryZytz(List<Integer> deliveryZytzArr){
		// TODO	删除
		Example example = new Example(DeliveryZytz.class);
		Criteria c = example.createCriteria();
		c.andIn("id", deliveryZytzArr);
		return deliveryZytzMapper.deleteByExample(example) > 0;
	}

}
